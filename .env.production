# Production Environment Variables
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/ecommerce_prod?retryWrites=true&w=majority

# JWT Configuration (Use strong, unique secrets in production)
JWT_ACCESS_SECRET=your_super_secure_access_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.com
DOMAIN_URL=https://your-api-domain.com

# Optional: Additional security configurations
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100